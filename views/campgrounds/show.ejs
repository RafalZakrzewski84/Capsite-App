<!-- @format -->

<%layout('/layouts/boilerplate')%>

<div class="row">
	<div class="col-6">
		<div class="card mb-3">
			<img src="<%= camp.image%>" class="card-img-top" alt="..." />
			<div class="card-body">
				<h5 class="card-title"><%= camp.title%></h5>
				<p class="card-text"><%=camp.description%></p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">Location: <%= camp.location%></li>
				<li class="list-group-item">
					Submitted by: <%= camp.author.username%>
				</li>
				<li class="list-group-item">Price: <%= camp.price%> USD/night</li>
			</ul>
			<!-- allowing editing and deleting when user login and user is creator of campground -->
			<% if(currentUser && camp.author.equals(currentUser._id)) { %>
			<div class="card-body">
				<a href="/campgrounds/<%= camp._id%>/edit" class="btn btn-info"
					>Edit Campground</a
				>
				<form
					class="d-inline"
					action="/campgrounds/<%=camp._id%>?_method=DELETE"
					method="POST"
				>
					<button class="btn btn-danger">Delete Campground</button>
				</form>
			</div>
			<% } %>
			<div class="card-footer text-muted">
				<a href="/campgrounds" class="card-link">All Campgrounds</a>
			</div>
		</div>
	</div>
	<div class="col-6">
		<% if(currentUser) { %>
		<h2>Leave a Review</h2>
		<form
			action="/campgrounds/<%= camp._id%>/reviews"
			method="POST"
			novalidate
			class="mb-3 validated-form"
		>
			<div class="mb-3">
				<label class="form-label" for="rating">Rating</label>
				<input
					class="form-range"
					min="1"
					max="5"
					type="range"
					name="review[rating]"
					id="rating"
				/>
			</div>
			<div class="mb-3">
				<label class="form-label" for="body">Review</label>
				<textarea
					class="form-control"
					name="review[body]"
					id="body"
					cols="30"
					rows="3"
					required
				></textarea>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<button class="btn btn-success">Submit</button>
		</form>
		<% } %> <% for(let review of camp.reviews) { %>
		<div class="mb-3 card">
			<div class="card-body">
				<h5 class="card-title">Rating: <%=review.rating%></h5>
				<p class="card-text">Review: <%=review.body%></p>
				<form
					class="d-inline"
					action="/campgrounds/<%=camp._id%>/reviews/<%=review._id%>?_method=DELETE"
					method="POST"
				>
					<button class="btn btn-sm btn-danger">Delete Review</button>
				</form>
			</div>
		</div>
		<%}%>
	</div>
</div>
