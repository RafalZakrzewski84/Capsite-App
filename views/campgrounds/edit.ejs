<%layout('/layouts/boilerplate')%>
<h1>Edit Campground</h1>
<form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      value="<%= camp.title %>"
      name="campground[title]"
    />
  </div>
  <div>
    <label for="loaction">Location</label>
    <input
      type="text"
      id="location"
      value="<%= camp.location%>"
      name="campground[location]"
    />
  </div>
  <button>Update Campground</button>
</form>
<footer>
  <a href="/campgrounds/<%= camp._id%>">Back To Campgrounds</a>
</footer>
